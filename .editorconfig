# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[{*.css,*.js,*.jsx}]
max_line_length = 80

[{*.css,*.js,*.json,*.jsx, *.html}]
tab_width = 2
indent_size = 2
